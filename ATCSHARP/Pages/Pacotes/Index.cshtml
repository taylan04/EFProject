@page "/"
@model ATCSHARP.Pages.Pacotes.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Pacotes Turísticos</h1>

<p>
    <a asp-page="Create">Criar um novo pacote</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Título
            </th>
            <th>
                Descrição
            </th>
            <th>
                Início
            </th>
            <th>
                Capacidade
            </th>
            <th>
                Preço
            </th>
            <th>
                Cidades
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.PacoteTuristico) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Titulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataInicio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CapacidadeMaxima)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Preco)
            </td>
            <td>
                @string.Join(", ", item.Destinos.Select(d => d.CidadeDestino?.Nome))
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Editar</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Detalhes</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
<a asp-page="../Reservas/Index">Reservas</a>
<br />
<a asp-page="../Clientes/Index">Clientes</a>
