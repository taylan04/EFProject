@page
@model ATCSHARP.Pages.Pacotes.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Detalhes</h1>

<div>
    <h4>PacoteTuristico</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <span>Título</span>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PacoteTuristico.Titulo)
        </dd>
        <dt class="col-sm-2">
            <span>Descrição</span>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PacoteTuristico.Descricao)
        </dd>
        <dt class="col-sm-2">
            <span>Início</span>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PacoteTuristico.DataInicio)
        </dd>
        <dt class="col-sm-2">
            <span>Capacidade</span>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PacoteTuristico.CapacidadeMaxima)
        </dd>
        <dt class="col-sm-2">
            <span>Preço</span>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PacoteTuristico.Preco)
        </dd>
    </dl>
    <h5>Cidades deste pacote:</h5>
    <ul>
        @foreach (var destino in Model.PacoteTuristico.Destinos)
        {
            <li>@destino.CidadeDestino?.Nome</li>
        }
    </ul>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.PacoteTuristico.Id">Editar</a> |
    <a asp-page="./Index">Voltar para a Lista</a>
</div>
